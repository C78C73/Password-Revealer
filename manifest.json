{
  "manifest_version": 3,
  "name": "Reveal Password",
  "version": "1.0",
  "description": "Click to show password fields on the current page.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
